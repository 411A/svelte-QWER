{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["vite/client"],
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$config": ["src/config"],
      "$config/*": ["src/config/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"],
      "$styles": ["src/styles"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": ["src/**/*"]
}
